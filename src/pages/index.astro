---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			main {
				text-align: center;
				padding: 4rem 1rem;
			}

			.profile-photo {
				width: 160px;
				height: 160px;
				border-radius: 50%;
				object-fit: cover;
				margin-bottom: 1.5rem;
				box-shadow: var(--box-shadow);
			}

			h1 {
				font-size: 2.5rem;
				margin-bottom: 0.5rem;
			}

			.tagline {
				font-size: 1.25rem;
				color: rgb(var(--gray));
				margin-bottom: 2rem;
			}

			.bio {
				max-width: 540px;
				margin: 0 auto 2rem;
				text-align: center;
				line-height: 1.6;
			}

			.bio p {
				margin-bottom: 0.75rem;
			}

			.credentials {
				font-size: 0.9rem;
				color: rgb(var(--gray));
				margin-bottom: 2.5rem;
			}

			.links {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				gap: 1rem;
				margin-bottom: 3rem;
			}

			.links a {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				padding: 0.75rem 1.25rem;
				background: rgb(var(--gray-light));
				color: rgb(var(--gray-dark));
				text-decoration: none;
				border-radius: 8px;
				font-size: 0.95rem;
				transition: all 0.2s ease;
			}

			.links a:hover {
				background: var(--accent);
				color: white;
				transform: translateY(-2px);
				box-shadow: 0 4px 12px rgba(var(--gray), 40%);
			}

			.links svg {
				width: 20px;
				height: 20px;
			}

			@media (max-width: 720px) {
				main {
					padding: 2rem 1rem;
				}

				.profile-photo {
					width: 130px;
					height: 130px;
				}

				h1 {
					font-size: 2rem;
				}

				.tagline {
					font-size: 1.1rem;
				}

				.links {
					flex-direction: column;
					align-items: center;
				}

				.links a {
					width: 100%;
					max-width: 280px;
					justify-content: center;
				}
			}
		</style>
	</head>
	<body>
		<main>
			<img
				src="/images/ken-brown-profile.webp"
				alt="Ken Brown"
				class="profile-photo"
				width="160"
				height="160"
			/>

			<h1>Ken Brown</h1>
			<p class="tagline">Helping to build trust in AI</p>

			<div class="bio">
				<p>
					CISO at Smartlinx Solutions with 22+ years of cybersecurity leadership experience.
					Previously at KPMG, IBM, and Comcast NBCUniversal.
				</p>
				<p>
					Focused on AI-driven security operations, application security, zero-trust architecture, and cloud security.
				</p>
			</div>

